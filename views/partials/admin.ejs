
    <% if (session.user_type=='admin' ) { %>
            <table class="w-full border-collapse border border-gray-300">
                <thead>
                    <tr class="bg-gray-200">
                        <th class="border border-gray-400 px-4 py-2 text-left">Username</th>
                        <th class="border border-gray-400 px-4 py-2 text-left">User Type</th>
                        <th class="border border-gray-400 px-4 py-2 text-left">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(typeof users !="undefined" ){ for( let user of users ) { %>
                        <tr class="bg-gray-200">
                            <td class="border border-gray-400 px-4 py-2">
                                <%=user.username%>
                            </td>
                            <td class="border border-gray-400 px-4 py-2" id="<%=user._id%>">
                                <%=user.user_type%>
                            </td>
                            <td class="border border-gray-400 px-4 py-2">
                                <div class="flex gap-3">
                                    <button
                                        class="bg-blue-300 text-stone-800 font-bold px-3 py-1 rounded hover:bg-blue-400"
                                        onclick="changeUserType('<%=user._id%>', 'admin')">Promote</button>
                                    <button
                                        class="bg-red-300 text-stone-800 font-bold px-3 py-1 rounded hover:bg-red-400"
                                        onclick="changeUserType('<%=user._id%>', 'user')">Demote</button>
                                </div>
                            </td>
                        </tr>
                        <%} }%>
                </tbody>
            </table>
    <% } else { %>
        <h1 class="text-3xl font-bold text-red-500 w-full text-center">Not Authorized</h1>
    <% } %>
<script src="/js/admin.js"></script>