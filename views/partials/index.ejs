<% if (typeof session.authenticated != "undefined" && session.authenticated) { %>
    <div class="text-center text-5xl text-slate-700 font-bold mt-8">Hello <%= session.username %>
    </div>
    <div class="text-center text-2xl text-slate-500 m-4">You look great today!</div>
    <a href="/members"
        class="w-30 h-12 bg-slate-700 text-indigo-200 hover:bg-slate-600 hover:cursor-pointer font-black flex items-center justify-center rounded-lg m-8 justify-self-center">
        Members
    </a>
<% } else { %>
    <div class="text-center text-5xl text-slate-700 font-bold mt-8">Welcome</div>
    <div class="text-center text-2xl text-slate-500 m-4">It's great to have you here! <br>Create an account to get started.</div>
    <a href="/signup"
        class="w-50 h-12 bg-slate-700 text-indigo-200 hover:bg-slate-600 hover:cursor-pointer font-black flex items-center justify-center rounded-lg m-8 justify-self-center">
        Create an Account
    </a>
<% } %>