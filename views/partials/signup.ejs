<div class="flex flex-col">
    <div id="username-error" class="text-rose-800 text-sm hidden font-bold"></div>
    <input
        name="username"
        type="text"
        placeholder="Username"
        class="border border-gray-400 rounded-md p-2 w-full mb-4"
    />
    <div id="email-error" class="text-rose-800 text-sm hidden font-bold"></div>
    <input
        name="email"
        type="email"
        placeholder="Email"
        class="border border-gray-400 rounded-md p-2 w-full mb-4"
    />
    <div id="password-error" class="text-rose-800 text-sm hidden font-bold"></div>
    <input
        name="password"
        type="password"
        placeholder="Password"
        class="border border-gray-400 rounded-md p-2 w-full mb-4"
    />
    <button
        id="submit"
        class= "bg-slate-700 text-indigo-200 hover:bg-slate-600 font-bold py-2 px-4 rounded self-end"
    >
        Submit
    </button>
</div>
